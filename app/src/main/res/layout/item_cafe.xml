<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/cafe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="카페명"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="30dp"
        android:textColor="@color/teal_200"
        android:id="@+id/cafe_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.4"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cafe_name"
        app:layout_constraintStart_toEndOf="@id/cafe_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cafe_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000-000-000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cafe_address" />

    <TextView
        android:id="@+id/cafe_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addrr"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cafe_name" />

    <TextView
        android:id="@+id/cafe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="aaaa"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cafe_phone"
        app:layout_constraintTop_toBottomOf="@+id/cafe_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ResultActivity"
    android:background="@color/font_white">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/dark_brown"
        android:text="분석 결과"
        android:fontFamily="@font/nanummyeongjoextrabold"
        android:textColor="@color/font_white"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/emotion_icon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/emotion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"/>

    <View
        android:layout_width="352dp"
        android:layout_height="1dp"
        android:background="@color/dark_brown"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해당 감정으로 카페를 추천할까요?"
        android:fontFamily="@font/nanummyeongjobold"
        android:textSize="18dp"
        android:layout_marginTop="40dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">
        
        <Button
            android:id="@+id/result_yes"
            android:background="@drawable/buttonshape"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginRight="40dp"
            android:text="예"
            android:fontFamily="@font/nanummyeongjobold"
            android:textSize="18dp"
            android:textColor="@color/font_white"/>

        <Button
            android:id="@+id/result_no"
            android:background="@drawable/buttonshape"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="아니오"
            android:fontFamily="@font/nanummyeongjobold"
            android:textSize="18dp"
            android:textColor="@color/font_white"/>
        
    </LinearLayout>


</LinearLayout>